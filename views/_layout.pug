    block head_css
      - var cssFile = isProduction ? `main__${process.env['npm_package_version']}.min.css` : 'main.css';
      link(
        href=`css/${cssFile}`
        rel="stylesheet"
        type="text/css")

    link(href="https://fonts.googleapis.com/css?family=Montserrat:400,600|Space+Mono" rel="stylesheet")
    link(href=feedUrl rel="alternate" type="application/rss+xml" title=feedDescription)

    style.

      .loader {
        width: 4.375rem;
        height: 4.375rem;
        display: -webkit-box;
        display: -ms-flexbox;
        display: flex;
        -webkit-box-align: center;
        -ms-flex-align: center;
        align-items: center;
        -webkit-box-pack: center;
        -ms-flex-pack: center;
        justify-content: center;
        background-color: #f8e81c;
        position: relative;
        outline: 1px solid #f8e81c;
        -webkit-animation-name: pulsate;
        animation-name: pulsate;
        -webkit-animation-duration: 1s;
        animation-duration: 1s;
        -webkit-animation-iteration-count: infinite;
        animation-iteration-count: infinite;
      }

      .loader__logo {
        line-height: 0;
      }

      .loader svg {
        width: 2.1875rem;
      }

      .loader::before, .loader::after {
        content: '';
        width: 0.5rem;
        height: 0.5rem;
        position: absolute;
        top: 0;
        left: 0;
        background-color: black;
        -webkit-animation-name: motion;
        animation-name: motion;
        -webkit-animation-duration: 1s;
        animation-duration: 1s;
        -webkit-animation-iteration-count: infinite;
        animation-iteration-count: infinite;
        -webkit-animation-timing-function: ease-in-out;
        animation-timing-function: ease-in-out;
      }

      .loader::after {
        -webkit-animation-delay: 500ms;
        animation-delay: 500ms;
      }

      @-webkit-keyframes pulsate {
        0% {
          opacity: 0.7;
        }
        50% {
          opacity: 1.0;
        }
        100% {
          opacity: 0.7;
        }
      }

      @keyframes pulsate {
        0% {
          opacity: 0.7;
        }
        50% {
          opacity: 1.0;
        }
        100% {
          opacity: 0.7;
        }
      }

      @-webkit-keyframes motion {
        0% {
          left: 0;
          top: 0;
        }
        25% {
          left: 3.875rem;
          top: 0;
        }
        50% {
          left: 3.875rem;
          top: 3.875rem;
        }
        75% {
          left: 0;
          top: 3.875rem;
        }
        100% {
          left: 0;
          top: 0;
        }
      }

      @keyframes motion {
        0% {
          left: 0;
          top: 0;
        }
        25% {
          left: 3.875rem;
          top: 0;
        }
        50% {
          left: 3.875rem;
          top: 3.875rem;
        }
        75% {
          left: 0;
          top: 3.875rem;
        }
        100% {
          left: 0;
          top: 0;
        }
      }


  block body
    body#layout.layout.is-loading
      div(style="display: none")
        include ../assets/icons-sprite.svg
      .layout__loader
        +loader
      .layout__page
        block page
      .layout__footer
        +footer(Object.assign({}, footer, {navigation}))
      block analytics
        if analyticsId
          script.
            (function (i, s, o, g, r, a, m) {
              i['GoogleAnalyticsObject'] = r;
              i[r] = i[r] || function () {
                      (i[r].q = i[r].q || []).push(arguments)
                  }, i[r].l = 1 * new Date();
              a = s.createElement(o),
                  m = s.getElementsByTagName(o)[0];
              a.async = 1;
              a.src = g;
              m.parentNode.insertBefore(a, m)
            })(window, document, 'script', 'https://www.google-analytics.com/analytics.js', 'ga');
            ga('create', '#{analyticsId}', 'auto');
            ga('send', 'pageview');


extends _layout

block page

  //-------
  //- INTRO
  //-------
  section
    h1=headline
    h3=subHeadline

  each category in categories
    h4!=category.name

  a(href=sampleLink.url)!=sampleLink.label

  h2!=callToAction.label

  form(
    method=subscribeForm.method
    action=subscribeForm.action)

    label(for=subscribeForm.email.fieldId)=subscribeForm.email.label
    div
      input(
        id=subscribeForm.email.fieldId,
        type="email"
        name=subscribeForm.email.fieldName
        placeholder=subscribeForm.email.label)

    button(type="submit")!=subscribeForm.submit.label

  div
    h2!=faq.title
    div
      each faqItem in faq.entries
        h3!=faqItem.title
        p!=faqItem.text

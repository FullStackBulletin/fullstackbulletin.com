{
  "name": "fullstackbullettin-website",
  "version": "1.0.0",
  "description": "The source code for fullstackbulletin.com website",
  "main": "index.js",
  "per-env": {
    "development": {
      "output_folder": "dev"
    },
    "production": {
      "output_folder": "dist"
    },
    "documentation": {
      "output_folder": "dist-doc"
    }
  },
  "scripts": {
    "test": "echo 'Well... we will do it live for now'",
    "clean": "rimraf ${output_folder}/*",
    "convert:data": "yaml2json settings/data.yml > ${output_folder}/data.json",
    "compile:utilities:js": "rimraf build-utilities/lib/* && babel --presets es2015 -d build-utilities/lib build-utilities/src",
    "build:svg-icons-sprite": "svg-sprite-generate -d assets/icons -o assets/icons-sprite.svg",
    "copy:favicon": "cpx 'assets/favicon/*.{svg,png,jpg,jpeg,gif}' ${output_folder}",
    "copy:images": "cpx 'assets/images/**/*.{svg,png,jpg,jpeg,gif}' ${output_folder}/images",
    "optimize:images": "imagemin assets/images -o ${output_folder}/images",
    "build:js": "npm-run-all compile:utilities:js compile:js:${NODE_ENV}",
    "optimize:css:vendors": "postcss -c settings/post-css.json -u autoprefixer -r ${output_folder}/css/*",
    "optimize:css:mq": "mqpacker --sort ${output_folder}/css/main.css > ${output_folder}/css/main__$npm_package_version.min.css",
    "create:assets": "npm-run-all clean build:js build:svg-icons-sprite build:images build:css convert:data build:views",
    "watch:css": "onchange 'assets/scss' -- npm run build:css:${NODE_ENV}",
    "watch:views": "onchange 'views/{**.pug,*.pug}' 'views/mixins/{**.pug,*.pug}' 'doc/{**.pug,*.pug}' 'settings/data.yml' -- npm run build:views",
    "watch:js": "onchange 'assets/javascript/{**.js,*.js}' 'build-utilities/src/{**.js,*.js}' -- npm run build:js",
    "serve": "browser-sync start --no-open -s ${output_folder} -f ${output_folder}",
    "start": "npm-run-all create:assets serve",
    "build:css": "per-env",
    "build:images": "per-env",
    "build:views": "per-env",
    "build:views:development": "pug views/index.pug --obj ${output_folder}/data.json --out ${output_folder}",
    "compile:js:development": "webpack --config ./webpack.development.js",
    "compile:css:development": "node-sass -o ${output_folder}/css assets/scss/main.scss --output-style compact --include-path node_modules --functions ./settings/scss.js",
    "build:css:development": "npm-run-all compile:css:development optimize:css:vendors",
    "build:images:development": "npm-run-all copy:images copy:favicon",
    "compile:js:production": "webpack -p --config ./webpack.production.js",
    "build:views:production": "pug views/index.pug --obj ${output_folder}/data.json --out ${output_folder}",
    "compile:css:production": "node-sass --output-style compressed -o ${output_folder}/css assets/scss/main.scss --include-path node_modules --functions ./settings/scss.js",
    "build:css:production": "npm-run-all compile:css:production optimize:css:*",
    "build:images:production": "npm-run-all copy:images copy:favicon optimize:images",
    "dev:development": "npm-run-all -p start watch:*",
    "prod:production": "npm run start",
    "prod:build:production": "npm run create:assets",
    "prod:build": "NODE_ENV=production per-env",
    "dev": "NODE_ENV=development per-env",
    "prod": "NODE_ENV=production per-env",
    "//": "----- Docs -----",
    "build:images:documentation": "npm-run-all copy:images copy:favicon optimize:images",
    "compile:js:documentation": "webpack -p --config ./webpack.documentation.js",
    "build:views:documentation": "pug doc/index.pug --obj settings/docs/pug.js --out ${output_folder}",
    "compile:css:documentation": "node-sass --output-style compact -o ${output_folder}/css assets/scss/docs.scss --include-path node_modules --functions ./settings/scss.js",
    "build:css:documentation": "npm-run-all compile:css:documentation optimize:css:vendors",
    "doc:documentation": "npm run start",
    "doc": "NODE_ENV=documentation per-env"
  },
  "author": {
    "name": "Luciano Mammino",
    "email": "luciano@fullstackbulletin.com",
    "url": "http://loige.co"
  },
  "contributors": [
    {
      "name": "Andrea Mangano",
      "email": "andrea@fullstackbulletin.com",
      "url": "http://andreamangano.com"
    }
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/FullStackBulletin/fullstackbulletin.com"
  },
  "bugs": {
    "url": "https://github.com/FullStackBulletin/fullstackbulletin.com/issues"
  },
  "devDependencies": {
    "autoprefixer": "^6.7.0",
    "babel-cli": "^6.23.0",
    "babel-core": "^6.22.1",
    "babel-loader": "^6.2.10",
    "babel-preset-es2015": "^6.22.0",
    "browser-sync": "^2.18.6",
    "cpx": "^1.5.0",
    "css-mqpacker": "^5.0.1",
    "imagemin-cli": "^3.0.0",
    "node-sass": "^4.3.0",
    "node-sass-utils": "^1.1.2",
    "npm-run-all": "^4.0.1",
    "onchange": "^3.2.1",
    "per-env": "^1.0.2",
    "postcss-cli": "^2.6.0",
    "pug-cli": "^1.0.0-alpha6",
    "rimraf": "^2.5.4",
    "super-gigi": "^1.11.0",
    "svg-sprite-generator": "0.0.7",
    "webpack": "^2.4.1",
    "yamljs": "^0.2.8"
  },
  "dependencies": {
    "path": "^0.12.7"
  }
}
